<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.szulcmaciej.wobble.sensorstraining">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.szulcmaciej.wobble.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.szulcmaciej.wobble.activities.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.szulcmaciej.wobble.activities.GameActivity"
            android:configChanges="orientation"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.szulcmaciej.wobble.activities.SettingsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.szulcmaciej.wobble.activities.HighscoresActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.szulcmaciej.wobble.activities.GameOverActivity"
            android:configChanges="orientation"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.szulcmaciej.wobble.activities.AboutActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.szulcmaciej.wobble.activities.HowToPlayActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>